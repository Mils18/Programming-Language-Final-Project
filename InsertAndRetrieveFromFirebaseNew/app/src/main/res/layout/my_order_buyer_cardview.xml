<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/invoiceNumMyOrderBuyerCardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INVOICE NUMBER" />

    <TextView
        android:id="@+id/statusMyOrderBuyerCardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status : Waiting for seller to respond" />

    <TextView
        android:id="@+id/shopNameMyOrderBuyerCardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shop :"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageViewMyOrderBuyerCardView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/ic_menu_report_image" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="98dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prodNameMyOrderBuyerCardview"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Product Name"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/totalPriceMyOrderBuyerCardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp. Total Price"
                android:textColor="@android:color/holo_red_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/quantityProdMyOrderBuyerCardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantity @ prodprice"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>